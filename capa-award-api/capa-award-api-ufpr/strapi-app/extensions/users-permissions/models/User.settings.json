{
  "kind": "collectionType",
  "collectionName": "users-permissions_user",
  "info": {
    "name": "user",
    "description": ""
  },
  "options": {
    "draftAndPublish": false,
    "timestamps": true
  },
  "attributes": {
    "username": {
      "type": "string",
      "minLength": 3,
      "unique": true,
      "configurable": false,
      "required": true
    },
    "email": {
      "type": "email",
      "minLength": 6,
      "configurable": false,
      "required": true
    },
    "provider": {
      "type": "string",
      "configurable": false
    },
    "institution": {
      "type": "string",
      "required": true
    },
    "password": {
      "type": "password",
      "minLength": 6,
      "configurable": false,
      "private": true
    },
    "resetPasswordToken": {
      "type": "string",
      "configurable": false,
      "private": true
    },
    "confirmationToken": {
      "type": "string",
      "configurable": false,
      "private": true
    },
    "confirmed": {
      "type": "boolean",
      "default": false,
      "configurable": false
    },
    "blocked": {
      "type": "boolean",
      "default": false,
      "configurable": false
    },
    "role": {
      "model": "role",
      "via": "users",
      "plugin": "users-permissions",
      "configurable": false
    },
    "name": {
      "type": "string"
    },
    "phone": {
      "type": "string",
      "required": true
    },
    "address": {
      "type": "component",
      "repeatable": true,
      "component": "address.address"
    },
    "avatar": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ],
      "plugin": "upload",
      "required": false,
      "pluginOptions": {}
    },
    "capes": {
      "type": "string"
    },
    "enterprise": {
      "type": "string"
    },
    "level": {
      "type": "string"
    },
    "ppg": {
      "type": "string"
    },
    "orcid": {
      "type": "string"
    },
    "isAdvisor": {
      "type": "boolean",
      "default": false
    },
    "isAdmin": {
      "type": "boolean",
      "default": false
    },
    "access_level": {
      "type": "enumeration",
      "enum": [
        "coordinator",
        "advisor",
        "author",
        "reviewer"
      ]
    }
  }
}
